package com.citycreek.of;

public class Exporter {

	private int count = 0;
	private char delimiter;
	protected final StringBuilder iff = new StringBuilder();

	public Exporter(char delimiter) {
		this.delimiter = delimiter;
	}

	public int getCount() {
		return this.count;
	}

	public void column(String value) {
		this.iff.append("\"").append(value).append("\"").append(this.delimiter);
	}

	public void column(Number value) {
		this.column(value.toString());
	}

	public void rowEnd() {
		this.iff.append("\n");
		this.count++;
	}

	public void headerRow(String header) {
		this.iff.append(header).append("\n");
	}

	public void column() {
		this.iff.append(this.delimiter);
	}
}
